generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Case Studies for portfolio display
model CaseStudy {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  client      String
  description String
  heroImage   String?
  logoImage   String?
  metrics     Json?    // Store metrics like "3x growth", "500k users", etc.
  tags        String[] // e.g., ["Paid Ads", "Email", "CRO"]
  published   Boolean  @default(false)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([published, order])
}

// Testimonials for social proof
model Testimonial {
  id          String   @id @default(cuid())
  name        String
  role        String?  // e.g., "CEO", "Marketing Director"
  company     String?
  content     String
  avatarUrl   String?
  rating      Int?     @default(5)
  featured    Boolean  @default(false)
  published   Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([published, featured, order])
}

// Contact form submissions (for future use)
model ContactSubmission {
  id        String   @id @default(cuid())
  name      String
  email     String
  company   String?
  message   String
  source    String?  // Where they found you
  status    String   @default("new") // new, contacted, converted, etc.
  createdAt DateTime @default(now())
  
  @@index([status, createdAt])
}

// Client logos for logo cloud display
model Logo {
  id        String   @id @default(cuid())
  name      String   @unique // Company name
  imageUrl  String   // Path to logo image
  shape     String   // "square" or "rect"
  alt       String   // Alt text for accessibility
  order     Int      @default(0)
  published Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([published, order])
}
